extends layout

include _includes/sharedHtmlFunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
        small &nbsp;#{pageHeader.strapline}

  .row
    .col-12.col-md-8
      each loc in locations
        .card
          .card-block
            h4
              a(href='/location')= loc.name
              small &nbsp;
                +rating(loc.rating)
              span.badge.badge-pill.badge-default.float-right= loc.distance
            p.address= loc.address
            .facilities
              for f in loc.facilities
                span.badge.badge-warning= f

    .col-12.col-md-4
      p.lead= sidebar